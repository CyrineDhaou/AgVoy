{% extends 'base.html.twig' %}

{% block title %}Circuit index{% endblock %}

{% block body %}
<br>
<br>
    <h1>Nos Circuits</h1>
<br>
<br>
     {% if is_granted('ROLE_ADMIN') %}

    <table class="table">
        <thead>
            <tr>
                <th><center>Id</center></th>
                <th><center>Description</center></th>
                <th><center>PaysDepart</center></th>
                <th><center>VilleDepart</center></th>
                <th><center>VilleArrivee</center></th>
                <th><center>DureeCircuit</center></th>
                <th><center>Actions<c/enter></th>
            </tr>
        </thead>
        <tbody>
        {% for circuit in circuits %} <a href="#demo" data-toggle="collapse">
            <tr>
                <td>{{ circuit.id }}</td>
                <td>{{ circuit.description }}</td>
                <td>{{ circuit.paysDepart }}</td>
                <td>{{ circuit.villeDepart }}</td>
                <td>{{ circuit.villeArrivee }}</td>
                <td>{{ circuit.dureeCircuit }}</td>
                <td>
               
 					                
                    <a href="{{ path('admin_circuit_show', {'id': circuit.id}) }}" class="btn btn-default">show</a>
                    <a href="{{ path('admin_circuit_edit', {'id': circuit.id}) }}" class="btn btn-default">edit</a>
                
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        
        </tbody>
    </table>

    <a href="{{ path('admin_circuit_new') }}" class="btn btn-info">Create new</a>
    {% endif  %}
{% endblock %}
