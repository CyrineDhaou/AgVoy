{% extends 'base.html.twig' %}

{% block title %}Circuit{% endblock %}

{% block body %}

    <h1>Circuit {{ circuit.description }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ circuit.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ circuit.description }}</td>
            </tr>
            <tr>
                <th>PaysDepart</th>
                <td>{{ circuit.paysDepart }}</td>
            </tr>
            <tr>
                <th>VilleDepart</th>
                <td>{{ circuit.villeDepart }}</td>
            </tr>
            <tr>
                <th>VilleArrivee</th>
                <td>{{ circuit.villeArrivee }}</td>
            </tr>
            <tr>
                <th>DureeCircuit</th>
                <td>{{ circuit.dureeCircuit }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_circuit_index') }}" class="btn btn-default">back to list</a>

    <a href="{{ path('admin_circuit_edit', {'id': circuit.id}) }}" class="btn btn-default">edit</a>

    {{ include('back/circuit/_delete_form.html.twig') }}
{% endblock %}
